{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "elm-sideload install --always && elm-pages build",
    "outputDirectory": "dist",
    "rewrites": [
        {"source": "/api/(.*)", "destination": "/api/$1"},
        {"source": "/(.*)", "destination": "/index.html"}
    ],
    "functions": {
        "api/*.js": {
            "maxDuration": 60
        }
    }

}